/*子模块end*/

/**
 * 医师讲堂
 */
.doctor-lists {
	padding: 20rpx;
}
.doctor-list-top {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	    -ms-flex-direction: row;
	        flex-direction: row;
}

/* 医师讲堂左右标题 */
.d-l-title {
	-webkit-box-flex: 9;
	-webkit-flex: 9;
	    -ms-flex: 9;
	        flex: 9;
	font-size: 32rpx;
	font-weight: bold;
}
.d-r-title {
	-webkit-box-flex: 2;
	-webkit-flex: 2;
	    -ms-flex: 2;
	        flex: 2;
	font-size: 32rpx;
}

/* 医师讲堂内容 */
.doctor-lists .d-items {
	padding-top: 20rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
}

/* 内容左 */
.d-items-left {
	-webkit-box-flex: 4;
	-webkit-flex: 4;
	    -ms-flex: 4;
	        flex: 4;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	    -ms-flex-direction: column;
	        flex-direction: column;
}
.d-item-title {
	font-weight: bold;
	font-size: 32rpx;
	height: 84rpx;
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 2;
	overflow: hidden;
}
.d-item-content {
	margin-top: 10rpx;
	color: #bfbfbf;
	width: 432rpx;
	height: 96rpx;
	font-size: 24rpx;
	/*首行缩进*/
	text-indent: 48rpx;
	/*显示省略符号修剪*/
	/* text-overflow: ellipsis; */
	display: -webkit-box;
	/* 从上向下垂直排列子元素。 */
	-webkit-box-orient: vertical;
	/* 显示的行数 */
	-webkit-line-clamp: 3;
	overflow: hidden;
}
.d-item-bottom {
	height: 48rpx;
	font-size: 24rpx;
	color: #bfbfbf;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	    -ms-flex-direction: row;
	        flex-direction: row;
	-webkit-box-align: end;
	-webkit-align-items: flex-end;
	    -ms-flex-align: end;
	        align-items: flex-end;
	-webkit-flex-wrap: nowrap;
	    -ms-flex-wrap: nowrap;
	        flex-wrap: nowrap;
}
.d-item-bottom .d-item-name{
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	    -ms-flex: 1;
	        flex: 1;
	color: #666666;
}
.d-item-bottom .d-item-yiyuan{
	-webkit-box-flex: 4;
	-webkit-flex: 4;
	    -ms-flex: 4;
	        flex: 4;
	margin-left: 50rpx;
	color: #666666;
	overflow: hidden;
	-o-text-overflow:ellipsis;
	   text-overflow:ellipsis;
	white-space: nowrap;
}

/* 内容右 */
.d-items-right {
	text-align: center;
}
.d-items-right .d-item-img {
	width: 200rpx;
}
.d-items-right .d-item-img image {
	width: 200rpx;
	height: 200rpx;
}

/* 医师讲堂end */
.green {
	background-color: green;
}
.yellow {
	background-color: yellow;
}
.red {
	background-color: red;
}
.blue {
	background-color: blue;
}

/* iPhone5/SE 宽度为320的适配 */
@media (max-width:320px){
.d-item-content {
		height: 84rpx !important;
		-webkit-line-clamp: 2;
}
}

